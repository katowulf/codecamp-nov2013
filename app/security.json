{
   "rules": {
      ".read": true,
      ".write": false,
      "user": {
         "$user": {
            ".write": "auth.uid === $user",
            ".validate": "newData.isString() && newData.val().length < 1000"
         }
      },
      "messages": {
         "$message": {
            ".write": "auth !== null",
            ".validate": "newData.hasChildren(['body', 'name'])",
            "body": {
               ".validate": "newData.isString() && newData.val().length < 1000"
            },
            "name": {
               ".validate": "newData.val() === root.child('user/'+auth.uid)"
            },
            "$other": {
               ".validate": false
            }
         }
      }
   }
}